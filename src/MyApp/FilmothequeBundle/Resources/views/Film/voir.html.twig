{% extends 'MyAppFilmothequeBundle::layout.html.twig' %}

{% block title %}Fiche du film {{ film.titre }}{% endblock %}

{% block content %}


<h1>Fiche du film {{ film.titre }}</h1>

<p>{{ film.description }}</p>

<p>Catégorie : {{ film.categorie.nom }}</p>

<p>Acteurs</p>
<ul>
{% for a in film.acteurs %}
    <li>{{ a.prenom }} {{ a.nom}}</li>
{% endfor %}
</ul>

<p><a href="{{ path('myapp_acteur_lister') }}">Retour à la liste des films</a></p>

{% endblock %}